<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mental Health</title>
</head>
<body>
    <div class="container">
        <h1>Mental Health Questionnaire</h1>
        <form action="/questions/submit" method="POST">
            <div class="questions">
                <% questions.forEach((question, index) => { %>
                    <div class="question">
                        <label for="q<%= index %>"><%= question.text %></label>
                        <div class="options">
                            <label>
                                <input type="radio" name="q<%= index %>" value="1"> 1
                            </label>
                            <label>
                                <input type="radio" name="q<%= index %>" value="2"> 2
                            </label>
                            <label>
                                <input type="radio" name="q<%= index %>" value="3"> 3
                            </label>
                            <label>
                                <input type="radio" name="q<%= index %>" value="4"> 4
                            </label>
                            <label>
                                <input type="radio" name="q<%= index %>" value="5"> 5
                            </label>
                        </div>
                    </div>
                <% }) %>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>

</body>
</html>
