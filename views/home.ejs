    <script>
        function radarAnim(){
            const div = document.createElement("div");
            div.classList.add("w-96", "h-96", "rounded-full", "bg-purple-500", "absolute");
            div.id = "radar";
            document.getElementById("hero").appendChild(div);
            gsap.to("#radar", {
                scale: 3,
                duration: 3,
                opacity: 0,
                ease: "power2.out",
                onComplete: () => {
                    document.getElementById("radar").remove();
                }
            });
        }



